.modal-header
  button.close(type='button', ng-click='$dismiss()') &times;
  h3.modal-title En Uygun Eşleşmeler
.modal-body
  .row
    .col-md-12
      .search-result(ng-scroll-bar)
        .loader-container(ng-show='vm.loading')
          .loader
        .container.full-width
          .profiles(ng-show='vm.profiles')
            .row
              .col-md-3.text-center(ng-repeat='profile in vm.profiles')
                figure.img-thumbnail
                  i.fa.fa-heart
                  img(ng-src='{{profile.picture}}')
                p
                  small {{profile.name}}
.modal-footer
  button.btn.btn-primary.btn-lg(ng-disabled='vm.loading')
    | Tamam
  button.btn.btn-default.btn-lg(ng-click='$dismiss()')
    | Vazgeç
